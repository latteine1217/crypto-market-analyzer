# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=crypto
POSTGRES_PASSWORD=crypto_pass
POSTGRES_DB=crypto_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Binance API (可選，公開數據不需要)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ===== 區塊鏈 API 配置 =====
# Etherscan API (Ethereum 主網)
# 獲取方式：https://etherscan.io/myapikey
ETHERSCAN_API_KEY=

# BscScan API (Binance Smart Chain)
# 獲取方式：https://bscscan.com/myapikey
# 注意：需要獨立申請，但可用同一個 Etherscan 帳號
BSCSCAN_API_KEY=

# TronScan API (Tron 主網) - 可選
# 獲取方式：https://tronscan.org/#/login
TRONSCAN_API_KEY=

# Blockchain.com API (Bitcoin)
# 公開 API 不需要 key，僅用於 Bitcoin 交易追蹤
# 進階功能（需要 API key）：https://www.blockchain.com/api
BLOCKCHAIN_API_KEY=

# Collector Settings
COLLECTOR_INTERVAL_SECONDS=60
DEFAULT_TIMEFRAME=1m
DEFAULT_LIMIT=1000

# Logging
LOG_LEVEL=INFO
