{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Crypto Dashboard API Contract",
  "type": "object",
  "definitions": {
    "ErrorDetail": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {}
      },
      "required": ["type", "code", "message"],
      "additionalProperties": true
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean", "const": false },
        "error": { "type": "string" },
        "error_detail": { "$ref": "#/definitions/ErrorDetail" }
      },
      "required": ["success", "error", "error_detail"],
      "additionalProperties": true
    },
    "DataResponse": {
      "type": "object",
      "properties": {
        "data": {},
        "cached": { "type": "boolean" },
        "source": { "type": "string" },
        "meta": {}
      },
      "required": ["data"],
      "additionalProperties": true
    }
  }
}
